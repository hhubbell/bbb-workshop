<script>

$(document).ready(function(){

    setInterval('checkPlayersTemp()', 1000);
});


function checkPlayersTemp(){
    var players = {1: Math.floor(Math.random() * 100) + 1,
                   2: Math.floor(Math.random() * 100) + 1}
    console.log(players);
    checkPlayers(players);
}


function checkPlayers(players){
  for(playerId in players){
    var objId = "bbb-" + playerId;

    // Check if ID doesn't exist as an <li> in #competitors
    if(!jQuery("#" + objId).length){
      var newThermo = jQuery("#thermoTemplate").clone().prop('id', objId);
      jQuery("#competitors").append(newThermo);
    }

    if(players[playerId] != null){
      thermometer(objId, players[playerId]);
    }
  }
}

/**
 * Thermometer Progress meter.
 * This function will update the progress element in the "thermometer"
 * to the updated percentage.
 * If no parameters are passed in it will read them from the DOM
 *
 * @param {Number} goalAmount The Goal amount, this represents the 100% mark
 * @param {Number} progressAmount The progress amount is the current amount
 * @param {Boolean} animate Whether to animate the height or not
 *
 */
function thermometer(id, progressAmount) {

    var $thermo = $("#"+id),
        $progress = $(".progress", $thermo),
        $goal = $(".goal", $thermo),
        percentageAmount,
        newCSS = {};

    goalAmount = parseFloat( $goal.text() ),
    progressAmount = progressAmount || parseFloat( $progress.text() ),
    percentageAmount =  Math.min( Math.round(progressAmount / goalAmount * 1000) / 10, 100); //make sure we have 1 decimal point

    //let's format the numbers and put them back in the DOM
    $goal.find(".amount").html(goalAmount + "&deg;");
    $progress.find(".amount").html(progressAmount + "&deg;");

    newCSS["height"] = percentageAmount + "%";

        $progress.animate( newCSS, 800, function(){
            $(this).find(".amount").fadeIn(500);
        });
    }
    else {
        $progress.css( newCSS );
        $progress.find(".amount").fadeIn(500);
    }
}

</script>
